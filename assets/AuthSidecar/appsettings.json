// AuthSidecar/appsettings.json
{
  "Jwt": {
    "Issuer": "https://your-company-auth",        // אותו Issuer גם בצד Next
    "Audience": "https://your-company-app",       // אותו Audience גם בצד Next
    "AccessSecretB64": "<BASE64_32_BYTES>",       // סוד לחתימת Access (HMAC)
    "RefreshSecretB64": "<BASE64_32_BYTES>"       // סוד לחתימת Refresh (נפרד)
  },
  "ConnectionStrings": {
    "Sql": "Server=YOUR_SQL;Database=YOUR_DB;Trusted_Connection=True;Encrypt=False"
  },
  "Kestrel": { "Endpoints": { "Http": { "Url": "http://0.0.0.0:5001" } } } // אם מריצים self-host
}